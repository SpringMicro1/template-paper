---
import { HOME } from "@config";
import LinkButton from "./LinkButton.astro";
import socialIcons from "@assets/socialIcons";

export interface Props {
  centered?: boolean;
}

const { centered = false } = Astro.props;
---

<div class={`social-icons ${centered ? "flex" : ""}`}>
  {
    Object.keys(HOME.LINKS).map(key => (
      <LinkButton
        href={HOME.LINKS[key].href}
        className="link-button"
        title={HOME.LINKS[key].content}
      >
        <Fragment set:html={socialIcons[key.split("Link ")[1]]} />
      </LinkButton>
    ))
  }
</div>

<style>
  .social-icons {
    @apply flex-wrap justify-center gap-1;
  }
  .link-button {
    @apply p-2 hover:rotate-6 sm:p-1;
  }
</style>
