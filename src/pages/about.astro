---
import { BASE, ABOUT } from "@config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title={`${ABOUT.TEXT.Heading} | ${BASE.title}`}>
  <Header activeNav="about" />
  <Breadcrumbs />
  <main id="main-content">
    <section id="about" class="prose mb-28 max-w-3xl prose-img:border-0">
      <h1 class="text-2xl tracking-wider sm:text-3xl">{ABOUT.TEXT.Heading}</h1>
      <div>
        <img
          src={ABOUT.IMAGES["Blog Picture"].Src}
          class="mx-auto sm:w-1/2"
          alt={ABOUT.IMAGES["Blog Picture"].Alt}
        />
      </div>
      {ABOUT.TEXT.Description}
    </section>
  </main>
  <Footer />
</Layout>
