---
import { Icon } from "astro-icon";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Contactform from "@components/contactform.astro";
import Header from "@components/Header.astro";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import { BASE, CONTACT } from "config";
const { TEXT, LINKS } = CONTACT;
---

<Layout title="Contact">
  <Header activeNav="contact" />
  <Breadcrumbs />
  <Container>
    <Sectionhead>
      <Fragment slot="title">Contact</Fragment>
      <Fragment slot="desc">{TEXT.DESCRIPTION}</Fragment>
    </Sectionhead>

    <div class="md:grid-cols-2 mx-auto mt-16 grid max-w-4xl gap-10">
      <div>
        <h2 class="text-gray-800 text-2xl font-medium">
          Contact {BASE.COMPANY_NAME}
        </h2>
        <p class="text-slate-500 mt-3 text-lg leading-relaxed">
          {TEXT.PARAGRAPH}
        </p>
        <div class="mt-5">
          <div class="text-gray-600 mt-2 flex items-center space-x-2">
            <Icon class="text-gray-400 h-4 w-4" name="uil:map-marker" />
            <span>{TEXT.ADDRESS}</span>
          </div><div class="text-gray-600 mt-2 flex items-center space-x-2">
            <Icon class="text-gray-400 h-4 w-4" name="uil:envelope" /><a
              href={"mailto:" + LINKS.EMAIL.href}>{LINKS.EMAIL.content}</a
            >
          </div><div class="text-gray-600 mt-2 flex items-center space-x-2">
            <Icon class="text-gray-400 h-4 w-4" name="uil:phone" />
            <a href={"tel:" + LINKS.PHONE.href}>
              {LINKS.PHONE.href}
            </a>
          </div>
        </div>
      </div>
      <div>
        <Contactform />
      </div>
    </div>
  </Container>
</Layout>
